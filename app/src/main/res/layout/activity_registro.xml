<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jose.pokemong.RegistroActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <EditText
            android:id="@+id/eteRegUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingreso usuario"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"/>
        <EditText
            android:id="@+id/eteRegPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eteRegUsuario"
            android:hint="Ingrese password"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:inputType="textPassword"
            />
        <EditText
            android:id="@+id/eteRegPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eteRegPassword"
            android:hint="Reingrese password"
            android:inputType="textPassword"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"/>
        <Button
            android:id="@+id/butGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eteRegPassword2"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:text="Guardar"/>
    </RelativeLayout>

</RelativeLayout>
